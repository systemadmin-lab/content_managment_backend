{
  "type": "commonjs",
  "scripts": {
    "start": "concurrently \"npm run server:start\" \"npm run worker:start\"",
    "server:start": "ts-node src/app.ts",
    "worker:start": "ts-node src/worker.ts",
    "dev": "concurrently \"npm run server:dev\" \"npm run worker:dev\"",
    "server:dev": "nodemon src/app.ts",
    "worker:dev": "nodemon src/worker.ts",
    "build": "tsc"
  },
  "dependencies": {
    "@types/socket.io": "^3.0.1",
    "bcrypt": "^6.0.0",
    "bullmq": "^5.66.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "cros": "^1.1.0",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "ioredis": "^5.9.1",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^9.1.2",
    "socket.io": "^4.8.3",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mongoose": "^5.11.96",
    "@types/node": "^25.0.6",
    "@types/uuid": "^10.0.0",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
